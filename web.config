<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- First, handle static files directly -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url=".*\.(html|htm|css|js|ico|jpg|jpeg|png|gif|svg|txt)$" />
          <action type="None" />
        </rule>

        <!-- Handle static folders directly -->
        <rule name="StaticFolders" stopProcessing="true">
          <match url="^(images|styles|scripts|assets)/.*" />
          <action type="None" />
        </rule>

        <!-- Don't interfere with requests for logs -->
        <rule name="LogFile" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^iisnode/" />
        </rule>

        <!-- All other URLs are mapped to the Node.js application entry point -->
        <rule name="DynamicContent">
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Configure static content handling and caching -->
    <staticContent>
      <remove fileExtension=".html" />
      <remove fileExtension=".htm" />
      <remove fileExtension=".css" />
      <remove fileExtension=".js" />
      <remove fileExtension=".json" />
      <remove fileExtension=".ico" />
      <remove fileExtension=".svg" />
      <mimeMap fileExtension=".html" mimeType="text/html" />
      <mimeMap fileExtension=".htm" mimeType="text/html" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".ico" mimeType="image/x-icon" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <clientCache cacheControlMode="DisableCache" />
    </staticContent>
    
    <!-- Make sure error responses are left untouched -->
    <httpErrors existingResponse="PassThrough" />
    
    <!-- Node.js settings -->
    <iisnode
      nodeProcessCommandLine="node"
      watchedFiles="*.js"
      loggingEnabled="true"
      logDirectory="iisnode" />
  </system.webServer>

  <!-- Specify the app startup file -->
  <appSettings>
    <add key="WEBSITE_NODE_DEFAULT_VERSION" value="~18" />
    <add key="WEBSITE_STARTUP_FILE" value="server.js" />
  </appSettings>
</configuration>
